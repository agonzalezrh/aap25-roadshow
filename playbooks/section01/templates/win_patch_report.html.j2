<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Windows Update Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
        .section-title {
            margin-top: 30px;
            font-size: 1.5em;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Windows Update Report</h1>
    <p><strong>Date Generated:</strong> {{ ansible_date_time.date }}</p>
    <p><strong>Reboot Required:</strong> {{ reboot_required | default(false) }}</p>
    
    <h2 class="section-title">Available Updates</h2>
    {% if updates | default({}) %}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>KB Numbers</th>
                <th>Categories</th>
                <th>Downloaded</th>
                <th>Installed</th>
                <th>Update ID</th>
            </tr>
        </thead>
        <tbody>
            {% for update_id, update in updates.items() %}
            <tr>
                <td>{{ update.title }}</td>
                <td>
                    {% if update.kb %}
                    <ul>
                        {% for kb_number in update.kb %}
                        <li>KB{{ kb_number }}</li>
                        {% endfor %}
                    </ul>
                    {% else %}
                    N/A
                    {% endif %}
                </td>
                <td>{{ update.categories | join(', ') }}</td>
                <td>{{ update.downloaded }}</td>
                <td>{{ update.installed }}</td>
                <td>{{ update_id }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>No updates available.</p>
    {% endif %}
    
    <h2 class="section-title">Filtered Updates</h2>
    {% if filtered_updates | default({}) %}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>KB Numbers</th>
                <th>Categories</th>
                <th>Downloaded</th>
                <th>Installed</th>
                <th>Filtered Reason</th>
                <th>Update ID</th>
            </tr>
        </thead>
        <tbody>
            {% for update_id, update in filtered_updates.items() %}
            <tr>
                <td>{{ update.title }}</td>
                <td>
                    {% if update.kb %}
                    <ul>
                        {% for kb_number in update.kb %}
                        <li>KB{{ kb_number }}</li>
                        {% endfor %}
                    </ul>
                    {% else %}
                    N/A
                    {% endif %}
                </td>
                <td>{{ update.categories | join(', ') }}</td>
                <td>{{ update.downloaded }}</td>
                <td>{{ update.installed }}</td>
                <td>{{ update.filtered_reasons | join(', ') }}</td>
                <td>{{ update_id }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>No filtered updates available.</p>
    {% endif %}
</body>
</html>
