<!DOCTYPE html>
<html>
<head>
    <title>Windows Updates Report</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
            background-color: #f3f3f3;
            color: #333;
        }
        h1 {
            color: #2b579a;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            background-color: #fff;
        }
        th, td {
            border: 1px solid #e1e1e1;
            padding: 12px 15px;
            text-align: left;
        }
        th {
            background-color: #2b579a;
            color: white;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #eef7ff;
        }
    </style>
</head>
<body>
    <h1>Windows Updates Report</h1>
    <table>
        <tr>
            <th>Server Name</th>
            <th>Update Title</th>
            <th>KB Numbers</th>
            <th>Categories</th>
        </tr>
        <tr>
            <td>{{ inventory_hostname }}</td>
            <td colspan="3">
                {% if updates | length == 0 and (filtered_updates | default([])) | length == 0 %}
                    <div class="no-updates">No updates needed</div>
                {% else %}
                    {% if updates %}
                        <h3>Updates:</h3>
                        <table>
                            {% for update_id, update in updates.items() %}
                            <tr>
                                <td>{{ update.title }}</td>
                                <td>
                                    <ul>
                                        {% for kb_number in update.kb %}
                                            <li>KB{{ kb_number }}</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                                <td>{{ update.categories | join(', ') }}</td>
                            </tr>
                            {% endfor %}
                        </table>
                    {% endif %}
                    {% if filtered_updates | default([]) %}
                        <h3>Filtered Updates:</h3>
                        <table>
                            {% for update_id, update in filtered_updates.items() %}
                            <tr>
                                <td>{{ update.title }}</td>
                                <td>
                                    <ul>
                                        {% for kb_number in update.kb %}
                                            <li>KB{{ kb_number }}</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                                <td>{{ update.categories | join(', ') }}</td>
                            </tr>
                            {% endfor %}
                        </table>
                    {% endif %}
                {% endif %}
            </td>
        </tr>
    </table>
</body>
</html>
