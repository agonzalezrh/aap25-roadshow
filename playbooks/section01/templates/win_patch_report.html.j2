<!DOCTYPE html>
<html>
<head>
    <title>Windows Updates Report</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
            background-color: #f3f3f3;
            color: #333;
        }
        h1 {
            color: #2b579a;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            background-color: #fff;
        }
        th, td {
            border: 1px solid #e1e1e1;
            padding: 12px 15px;
            text-align: left;
        }
        th {
            background-color: #2b579a;
            color: white;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #eef7ff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Updates Dashboard</h1>

        <div>
            <div class="section-title">Available Updates</div>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>KB</th>
                        <th>Categories</th>
                        <th>Downloaded</th>
                        <th>Installed</th>
                    </tr>
                </thead>
                <tbody>
                    {% for update_id, update in updates.items() %}
                    <tr>
                        <td>{{ update.title }}</td>
                        <td>{{ update.kb | join(", ") }}</td>
                        <td>{{ update.categories | join(", ") }}</td>
                        <td>{{ "Yes" if update.downloaded else "No" }}</td>
                        <td>{{ "Yes" if update.installed else "No" }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div>
            <div class="section-title">Filtered Updates</div>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>KB</th>
                        <th>Categories</th>
                        <th>Downloaded</th>
                        <th>Installed</th>
                        <th>Filter Reason</th>
                    </tr>
                </thead>
                <tbody>
                    {% for update_id, update in filtered_updates.items() %}
                    <tr>
                        <td>{{ update.title }}</td>
                        <td>{{ update.kb | join(", ") }}</td>
                        <td>{{ update.categories | join(", ") }}</td>
                        <td>{{ "Yes" if update.downloaded else "No" }}</td>
                        <td>{{ "Yes" if update.installed else "No" }}</td>
                        <td>{{ update.filtered_reason }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
